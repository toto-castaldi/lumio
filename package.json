{
  "name": "lumio",
  "private": true,
  "version": "0.1.0",
  "description": "AI-powered flashcard study platform",
  "scripts": {
    "dev:web": "pnpm --filter @lumio/web dev",
    "dev:mobile": "pnpm --filter @lumio/mobile dev",
    "build:web": "pnpm --filter @lumio/web build",
    "build:mobile": "pnpm --filter @lumio/mobile build",
    "build:packages": "pnpm --filter @lumio/shared build && pnpm --filter @lumio/core build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:functions": "supabase functions serve",
    "commit": "cz",
    "release": "standard-version && node scripts/bump-version.js",
    "release:dry": "standard-version --dry-run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): {{currentTag}} [skip ci]",
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "packages/shared/src/version.ts",
        "updater": "scripts/version-updater.js"
      }
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
